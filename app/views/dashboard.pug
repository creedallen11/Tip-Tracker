extends layout.pug

block content
  .row
    .card
      .card-content
        span(class="card-title") Welcome to Tip Tracker Creed!
        p Log recent delivery shifts here.
        .row
          .col.m12.s12
            form(id="log" name="log" action="/entry" method="post")
              .input-field.col.s4.m2
                input(name="hours" type="text" placeholder="hours")
              .input-field.col.s4.m2
                input(name="miles" type="text" placeholder="miles")
              .input-field.col.s4.m2
                input(name="tips" type="text" placeholder="tips")
              .input-field.col.s3.m3
                input(name="date" type="date" class="datepicker")
              .input-field.col.s4.m3
                button.btn.col.s8.m8 Log Entry
        .row
          span(class="card-content")=message

  .row
    .card
      .card-content
        span(class="card-title") Most Recent Shifts
        table
          .thead
            tr
              th Date
              th Hours
              th Miles
              th Tips
              th Drive Cost
              th Effective Hourly
          tbody
            tr
              td 2017-08-25
              td 6.5
              td 75
